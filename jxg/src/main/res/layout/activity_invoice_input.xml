<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/action_bar" />

    <LinearLayout
        android:background="@drawable/white_line_top_bottom"
        android:layout_marginTop="12dp"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="发票抬头"/>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/v_geren"
                android:background="@drawable/background_textview_selected"
                android:textColor="@color/app_red"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:text="个人"/>

            <TextView
                android:id="@+id/v_gongsi"
                android:background="@drawable/background_textview_normal"
                android:textColor="@color/gray_black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:layout_marginLeft="16dp"
                android:text="公司"/>

        </LinearLayout>

        <View
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp" android:background="@color/separator_color"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="发票信息"/>

        <EditText
            android:id="@+id/et_invoice_title"
            android:background="@drawable/border_round"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="13sp"
            android:hint="请输入名称"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_margin="16dp"
        style="@style/RedCornerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认"/>

</LinearLayout>