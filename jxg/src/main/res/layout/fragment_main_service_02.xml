                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_po_05"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/btn_bg_white"
                    android:id="@+id/btn_po_06">

                    <ImageView
                        android:src="@mipmap/po_06"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/img_po_06"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:text="改装"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_po_06"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/btn_bg_white"
                    android:id="@+id/btn_po_07">

                    <ImageView
                        android:src="@mipmap/po_07"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/img_po_07"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:text="汽车美容"
                        android:layout_width="match_parent"
