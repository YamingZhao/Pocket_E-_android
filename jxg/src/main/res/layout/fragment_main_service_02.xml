                        android:text="送油"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_so_03"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
