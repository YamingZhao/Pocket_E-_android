<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/white_line_top_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <net.wezu.widget.LabeledTextItem
                    android:id="@+id/lti_account_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/label_item_padding"
                    app:label="绑定账号"/>

                <net.wezu.widget.LabeledTextItem
                    android:id="@+id/lti_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_line_top_bottom_selector"
                    android:padding="@dimen/label_item_padding"
                    app:label="修改密码"/>

                <net.wezu.widget.LabeledTextItem
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    app:label="音效开关"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:background="@drawable/white_line_top_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <net.wezu.widget.LabeledTextItem
                    android:id="@+id/lti_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_selector"
                    android:padding="@dimen/label_item_padding"
                    app:label="建议与反馈"/>

                <net.wezu.widget.LabeledTextItem
                    android:id="@+id/lti_law"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_line_top_bottom_selector"
                    android:padding="@dimen/label_item_padding"
                    app:label="法律条款"/>

                <net.wezu.widget.LabeledTextItem
                    android:id="@+id/lti_about_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_selector"
                    android:padding="@dimen/label_item_padding"
                    app:label="关于我们"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/RedCornerButton"
                android:text="@string/logout"
                android:layout_margin="@dimen/default_item_padding" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>